                    <androidx.cardview.widget.CardView
                        android:id="@+id/guideCard1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_margin="8dp"
                        android:backgroundTint="@color/material_dynamic_neutral95"
